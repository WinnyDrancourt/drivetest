<!-- Card for travel time between User city and first destinations -->
<body>
  <% if i == 0 %>
  <div class="card-destination background-light-grey mx-2 border border-danger">
    <div class="row">
    <div class="card-destination-sm border border-success col">
      <p><%= i +1 %></p>
      <% if @user.city.nil? || @user.city= "" %>
        <p>From ... to <%= d.city %>:</p>
      <% else %>
        <p>From <%= @itinerary.user.city %> to <%= d.city %>:</p>
      <% end %>
    </div>
    </div>
    <%= render partial: 'destination_card', locals: { d: d, i: i }%>
  </div>
  <div class="card-destination-sm border border-danger">
    <%= render partial: 'travel_time', locals: { d: d, i: i } %>
  <% elsif i < @itinerary.destinations.size - 1 %>
  <%= render partial: 'destination_card', locals: { d: d, i: i } %>
  </div>
  <div class="card-destination-sm">
    <%= render partial: 'travel_time', locals: { d: d, i: i } %>
  <% else %>
  <%= render partial: 'destination_card', locals: { d: d, i: i } %>
  </div>
  <% end %>
</body>
