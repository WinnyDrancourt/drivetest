<div class="card-user overflow-hidden">
    <div class="w-100 d-flex justify-content-center"></div>
    <div class="d-flex justify-content-around">
      <% if @user.city.nil? || @user.city == "" %>
        <p> If you want personalize your Experience, edit your profile with City and/or ZipCode</p>
      <% else %>
        <div id="cityMapContainer">
          <div id="city"><%= @coordinates %></div>
        </div>  
      <% end %>
    </div> 
  <div class="d-flex flex-column text-center">
    <p><u>Pseudo :</u> <%= @user.pseudo %></p>
    <p><u>First Name :</u> <%= @user.first_name %></p>
    <p><u>Last Name:</u> <%= @user.last_name %></p>
    <p><u>City:</u> <%= @user.city %></p>
    <p><u>Zip Code:</u> <%= @user.zipcode %></p>
    <% if current_user == @user %>
    <p><u>E-mail:</u> <%= @user.email %></p>
  </div>
  <div class="d-flex justify-content-end me-2 mb-2">
  <%= link_to "Edit Profile", edit_user_registration_path(@user), class:"btn btn-secondary background-sand text-dark border-0 btn-hover" %>
  <% end %>
  </div>
</div>
<%= javascript_include_tag 'static_user' %>
