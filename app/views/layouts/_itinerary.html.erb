<!-- Partial for Itinerary Card -->

<div class="card-itinerary background-light-grey shadow-sm overflow-hidden justify-content-center">
  <%= image_tag("ajaccio.jpeg", :class => "img-destination w-100") %>
  <div class="text-center text-truncate">
    <h3><%=i.title%></h3>
  </div>
  <div class="text-center">
    <p><%= i.destinations[0].city %> âžœ <%= i.destinations[-1].city %></p>
  </div>
  <div class="d-flex justify-content-around">
    <p>Duration : <%= i.destinations.sum(:staying_time)%>days</p>
    <p>Steps: <%= i.destinations.length %></p>
    <p>Likes: <%= i.likes.count %></p>
  </div>
  <div class="d-flex justify-content-center">
    <button class="button-card">
      <div class="text">
      <span><%= link_to "GO !", itinerary_path(i), class: "text-dark text-decoration-none" %></span>
      </div>
      <div class="clone">
      <span><%= link_to "GO !", itinerary_path(i), class: "text-dark text-decoration-none" %></span>
      </div>
      <svg stroke-width="2" stroke="currentColor" viewBox="0 0 24 24" fill="none" class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" width="20px">
      <path d="M14 5l7 7m0 0l-7 7m7-7H3" stroke-linejoin="round" stroke-linecap="round"></path>
      </svg>
    </button>
  </div>
</div>
